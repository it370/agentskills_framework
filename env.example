# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/agentskills

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration (REQUIRED for user management)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your_secure_random_secret_here_min_32_chars
JWT_EXPIRY_HOURS=24

# SMTP Configuration (OPTIONAL - for password reset emails)
# For Brevo (recommended): smtp-relay.brevo.com, port 587
# For Gmail: smtp.gmail.com, port 587 (requires App Password)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USERNAME=your_brevo_email@example.com
SMTP_PASSWORD=your_brevo_smtp_key
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=AgentSkills Framework

# Application Configuration
APP_URL=http://localhost:3000
ALLOWED_ORIGINS=*

# Server Configuration
REST_API_HOST=0.0.0.0
REST_API_PORT=8000
SOCKETIO_HOST=0.0.0.0
SOCKETIO_PORT=7000
# Internal communication between REST API and Socket.IO (optional)
# Use 127.0.0.1 for same-machine, or specific IP for multi-host setup
# SOCKETIO_INTERNAL_HOST=127.0.0.1
RELOAD=false

# SSL/TLS Configuration (OPTIONAL)
# SSL_KEYFILE=path/to/key.pem
# SSL_CERTFILE=path/to/cert.pem

# Callback Configuration
CALLBACK_BASE_URL=http://localhost:8000

# Checkpointer Configuration
USE_POSTGRES_CHECKPOINTS=true

# MongoDB Configuration (OPTIONAL)
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DB=agentskills

# Redis Configuration (OPTIONAL)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Connection Pool Configuration
POSTGRES_POOL_MIN_SIZE=2
POSTGRES_POOL_MAX_SIZE=10
POSTGRES_POOL_TIMEOUT=30

# Legacy User Configuration (deprecated - use JWT authentication instead)
# DEFAULT_USER_ID=system
# DEFAULT_USER_ADMIN=true
